<odoo>
	<template id="create_operation">
		<t t-call="website.layout">

			<div class="paper_background">
				<div class="paper">

					<h1 style="color:#33cba5;margin-bottom:20px;font-family:museo-sans,sans-serif;">
						<div style="center">Contact</div>
					</h1>
					<br/>
					<form action="/lhr-created" method="post" enctype="multipart/form-data">

						<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

						
						<div class="form-group form-field o_website_form_required_custom">
							<h4>
								<t t-if="lang == 'en'">You are ?</t>
							  	<t t-elif="lang == 'pt'">Vous êtes ?</t>
							  	<t t-else="">Vous êtes ?</t> 
							<span class="grey">
							  <span class="list-item">
							  <input type="radio" name="gender" value="man" checked="checked">&amp;nbsp;</input> 
							  <span class="grey first">
							  	<t t-if="lang == 'en'">MAN</t>
							  	<t t-elif="lang == 'pt'">HOMEM</t>
							  	<t t-else="">HOMME</t>
							  </span>
							  </span>
							  <span class="list-item">
							    <input type="radio" name="gender" value="woman">&amp;nbsp;</input> 
							    <span class="grey">
							    	<t t-if="lang == 'en'">WOMAN</t>
								  	<t t-elif="lang == 'pt'">MULHER</t>
								  	<t t-else="">FEMME</t>
							    </span>
							  </span>
							</span>
							</h4>
						</div>

						<div class="form-group form-field o_website_form_required_custom">
							<table class="large">
								<tr>
									<td>
										<input 
											t-if="lang == 'en'"
											type="text" 
											name="firstname" 
											class="space form-control o_website_form_input"
											required="True" 
											placeholder="First name"/>
									  	<input 
									  		t-elif="lang == 'fr'"
											type="text" 
											name="firstname" 
											class="space form-control o_website_form_input"
											required="True" 
											placeholder="Nom"/>
								  		<input 
								  			t-else=""
											type="text" 
											name="firstname" 
											class="space form-control o_website_form_input"
											required="True" 
											placeholder="Nom"/>
									</td>
									<td>
										<input 
											t-if="lang == 'en'"
											type="text" 
											name="lastname" 
											class="form-control o_website_form_input"
											required="True" 
											placeholder="Last name"/>
										<input 
											t-elif="lang == 'fr'"
											type="text" 
											name="lastname" 
											class="form-control o_website_form_input"
											required="True" 
											placeholder="Prénom"/>
										<input 
											t-else=""
											type="text" 
											name="lastname" 
											class="form-control o_website_form_input"
											required="True" 
											placeholder="Prénom"/>
									</td>
								</tr>
								<tr>
									<td colspan="2">
										<input 
											t-if="lang == 'en'"
											type="text" 
											name="street" 
											class="space form-control o_website_form_input"
											required="True" 
											placeholder="Address"/>
										<input 
											t-if="lang == 'fr'"
											type="text" 
											name="street" 
											class="space form-control o_website_form_input"
											required="True" 
											placeholder="Adresse"/>
										<input 
											t-else=""
											type="text" 
											name="street" 
											class="space form-control o_website_form_input"
											required="True" 
											placeholder="Adresse"/>
									</td>
								</tr>
								<tr>
									<td>
										<input 
											t-if="lang == 'en'"
											type="text" 
											name="zip" 
											class="space form-control o_website_form_input"
											required="True" 
											placeholder="Zip code"/>
										<input 
											t-elif="lang == 'fr"
											type="text" 
											name="zip" 
											class="space form-control o_website_form_input"
											required="True" 
											placeholder="Code postal"/>
										<input 
											t-else=""
											type="text" 
											name="zip" 
											class="space form-control o_website_form_input"
											required="True" 
											placeholder="Code postal"/>
									</td>
									<td>
										<input 
											t-if="lang == 'en'"
											type="text" 
											name="city" 
											class="form-control o_website_form_input"
											required="True" 
											placeholder="City"/>
										<input 
											t-elif="lang == 'fr'"
											type="text" 
											name="city" 
											class="form-control o_website_form_input"
											required="True" 
											placeholder="Ville"/>
										<input 
											t-else=""
											type="text" 
											name="city" 
											class="form-control o_website_form_input"
											required="True" 
											placeholder="Ville"/>
									</td>
								</tr>
								<tr>
									<td>
										<select name="country" class="form-control o_website_form_input">
											<t t-foreach="countries" t-as="country">
											<option t-att-value="country.id">
												<t t-esc="country.name"/>
											</option>
											</t>
										</select>
									</td>
									<td>
										<input 
											t-if="lang == 'en'"
											type="number" 
											name="yo" 
											class="form-control o_website_form_input"
											required="True" 
											placeholder="Age"/>
										<input 
											t-elif="lang == 'fr'"
											type="number" 
											name="yo" 
											class="form-control o_website_form_input"
											required="True" 
											placeholder="Âge"/>
										<input 
											t-else=""
											type="number" 
											name="yo" 
											class="form-control o_website_form_input"
											required="True" 
											placeholder="Âge"/>
									</td>
								</tr>
								<tr>
									<td colspan="2">
										<input 
											type="text" 
											name="email" 
											class="space form-control o_website_form_input"
											required="True" 
											placeholder="E-mail"/>
									</td>
								</tr>
								<tr>
									<td>
										<input 
											t-if="lang == 'en'"
											type="text" 
											name="phone" 
											class="space form-control o_website_form_input"
											placeholder="Phone"/>
										<input 
											t-elif="lang == 'fr'"
											type="text" 
											name="phone" 
											class="space form-control o_website_form_input"
											placeholder="Téléphone"/>
										<input 
											t-else=""
											type="text" 
											name="phone" 
											class="space form-control o_website_form_input"
											placeholder="Téléphone"/>
									</td>
									<td>
										<input 
											t-if="lang == 'en'"
											type="text" 
											name="mobile" 
											class="form-control o_website_form_input"
											placeholder="Mobile phone"/>
										<input 
											t-elif="lang == 'fr'"
											type="text" 
											name="mobile" 
											class="form-control o_website_form_input"
											placeholder="Mobile"/>
										<input 
											t-else=""
											type="text" 
											name="mobile" 
											class="form-control o_website_form_input"
											placeholder="Mobile"/>
									</td>
								</tr>
							</table>
						</div>

						<div class="space">
							<h5>Avez-vous déjà eu recours à la Greffe des Cheveux ? 
								<span class="grey">
									<span class="list-item">
										<input type="radio" name="grafted" value="no" checked="checked">&amp;nbsp;</input> 
										<span class="grey first">
											<t t-if="lang == 'en'">NO</t>
										  	<t t-elif="lang == 'pt'">Não</t>
										  	<t t-else="">NON</t>
										</span>
									</span>
									<span class="list-item">
										<input type="radio" name="grafted" value="yes">&amp;nbsp;</input> 
										<span class="grey">
											<t t-if="lang == 'en'">YES</t>
										  	<t t-elif="lang == 'pt'">Sim</t>
										  	<t t-else="">OUI</t>
										</span>
									</span>
								</span>
								<br/><br/>
							</h5> 
						</div>


						<div class="form-group form-field o_website_form_required_custom" style="margin-top:10px;">
							<textarea
								t-if="lang == 'en'"
								type="text"
								name="message" 
								rows = "7" 
								cols = "50" 
								maxlength="5000"
								class="form-control o_website_form_input"
								required="True"
								placeholder="Please describe your hair situation (We also treat beard or eyebrow grafts)"></textarea> 
							<textarea
								t-elif="lang == 'fr'"
								type="text"
								name="message" 
								rows = "7" 
								cols = "50" 
								maxlength="5000"
								class="form-control o_website_form_input"
								required="True"
								placeholder="Décrivez-nous votre situation capillaire (Nous traitons aussi les greffes de barbe ou de sourcils)"></textarea> 
							<textarea
								t-else=""
								type="text"
								name="message" 
								rows = "7" 
								cols = "50" 
								maxlength="5000"
								class="form-control o_website_form_input"
								required="True"
								placeholder="Décrivez-nous votre situation capillaire (Nous traitons aussi les greffes de barbe ou de sourcils)"></textarea> 
						</div>

						<div class="form-group" style="margin-top:10px;">
							<t><h5>
								<t t-if="lang == 'en'">Assess your baldness level : </t>
							  	<t t-elif="lang == 'pt'">Évaluez votre niveau de calvitie : </t>
							  	<t t-else="">Évaluez votre niveau de calvitie : </t>
							</h5></t><br/>
							<table class="large">
								<tr>
									<td>
										<center><img t-att-src="'/lhr_portal/static/src/img/man_1.png'" width="50" height="50"/>
										<img t-att-src="'/lhr_portal/static/src/img/woman_1.png'" width="50" height="50"/></center>
									</td>
									<td>
										<center><img t-att-src="'/lhr_portal/static/src/img/man_2.png'" width="50" height="50"/>
										<img t-att-src="'/lhr_portal/static/src/img/woman_2.png'" width="50" height="50"/></center>
									</td>
									<td>
										<center><img t-att-src="'/lhr_portal/static/src/img/man_3.png'" width="50" height="50"/>
										<img t-att-src="'/lhr_portal/static/src/img/woman_3.png'" width="50" height="50"/></center>
									</td>
									<td>
										<center><img t-att-src="'/lhr_portal/static/src/img/man_4.png'" width="50" height="50"/>
										<img t-att-src="'/lhr_portal/static/src/img/woman_4.png'" width="50" height="50"/></center>
									</td>
								</tr>
								<tr>
									<td><center><input type="radio" name="case" value="1" checked="checked"/></center></td>
									<td><center><input type="radio" name="case" value="2"/></center></td>
									<td><center><input type="radio" name="case" value="3"/></center></td>
									<td><center><input type="radio" name="case" value="4"/></center></td>
								</tr>
							</table>
						</div>

						<div class="form-group" style="margin-top:10px;">
						  <table>
						    <tr>
						    	<td>
						    		<t t-if="lang == 'en'">Donor area (neck)</t>
								  	<t t-elif="lang == 'pt'">Zone donneuse (nuque)</t>
								  	<t t-else="">Zone donneuse (nuque)</t>
						    	</td>
						    	<td><input type="file" name="donor_neck" class="file form-control" data-show-upload="true" data-show-caption="true" lass="file" data-show-preview="true" accept="image/*,application/pdf"/></td>
						    </tr>
						    <tr>
						    	<td>
						    		<t t-if="lang == 'en'">Donor area (side)</t>
								  	<t t-elif="lang == 'pt'">Zone donneuse (côté)</t>
								  	<t t-else="">Zone donneuse (côté)</t>
						    	</td>
						    	<td><input type="file" name="donor_side" class="file form-control" data-show-upload="true" data-show-caption="true" lass="file" data-show-preview="true" accept="image/*,application/pdf"/></td>
						    </tr>
						    <tr>
						    	<td>
						    		<t t-if="lang == 'en'">Area to be treated (face)</t>
								  	<t t-elif="lang == 'pt'">Zone à traiter (face)</t>
								  	<t t-else="">Zone à traiter (face)</t>
						    	</td>
						    	<td><input type="file" name="treat_face" class="file form-control" data-show-upload="true" data-show-caption="true" lass="file" data-show-preview="true" accept="image/*,application/pdf"/></td>
						    </tr>
						    <tr>
						    	<td>
						    		<t t-if="lang == 'en'">Area to be treated (side)</t>
								  	<t t-elif="lang == 'pt'">Zone à traiter (profil)</t>
								  	<t t-else="">Zone à traiter (profil)</t>
						    	</td>
						    	<td><input type="file" name="treat_side" class="file form-control" data-show-upload="true" data-show-caption="true" lass="file" data-show-preview="true" accept="image/*,application/pdf"/></td>
						    </tr>
						    <tr>
						    	<td>
						    		<t t-if="lang == 'en'">Area to be treated (top)</t>
								  	<t t-elif="lang == 'pt'">Zone à traiter (dessus)</t>
								  	<t t-else="">Zone à traiter (dessus)</t>
						    	</td>
						    	<td><input type="file" name="treat_top" class="file form-control" data-show-upload="true" data-show-caption="true" lass="file" data-show-preview="true" accept="image/*,application/pdf"/></td>
						    </tr>
						  </table>
						</div>

						<div class="form-group" align="right">
							<button class="btn btn-block btn-primary o_website_form_send" style="max-width: 20%;">
								<t t-if="lang == 'en'">Send</t>
							  	<t t-elif="lang == 'pt'">Envoyer</t>
							  	<t t-else="">Envoyer</t>
							</button>
						</div>
					</form>
				</div>
			</div>
		</t>
	</template>
</odoo>